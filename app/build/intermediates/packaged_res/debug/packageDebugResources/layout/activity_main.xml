<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="16dp">

    <TextView android:id="@+id/tvStatus" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="Status: -" />


    <TextView android:id="@+id/tvSoil" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:textSize="24sp" android:text="Soil: -" />


    <TextView android:id="@+id/tvTemp" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="Temp: -" />


    <TextView android:id="@+id/tvHum" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="Humidity: -" />


    <TextView android:id="@+id/tvNPK" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="NPK: -" />


    <Button android:id="@+id/btnRecommend" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="Recommend Crop" />

    <TextView android:id="@+id/tvRecommendation" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:textSize="18sp" android:text="Recommendation: -" />

    <Button android:id="@+id/btnRecommend1" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="Recommend Vegetable" />

    <TextView android:id="@+id/tvRecommendation1" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:textSize="18sp" android:text="Recommendation: -" />

    <EditText
        android:id="@+id/etCropName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Crop Name (tomato)"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Crop Start Date (yyyy-MM-dd)"
        android:minHeight="48dp" />

    <Spinner
        android:id="@+id/spSoilType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:entries="@array/soil_types"/>
    <Button
        android:id="@+id/btnIrrigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Irrigation Advice" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingTop="16dp" />

    <Button
        android:id="@+id/btnFertilizer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Fertilizer Advice" />

    <TextView
        android:id="@+id/tvFertilizerResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingTop="16dp" />

    <Button
        android:id="@+id/btnDiseaseRisk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Disease Risk Advice" />

    <TextView
        android:id="@+id/tvDiseaseRiskResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingTop="16dp" />
</LinearLayout>