<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Agri Dashboard"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall" />

        <!-- Internet Status -->
        <TextView
            android:id="@+id/tvDeviceStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŒ Internet: Checking..."
            android:layout_marginBottom="12dp" />

        <!-- Location + Temp + Humidity (Inline) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <!-- Location -->
            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Location: --"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tvTempInline"
                app:layout_constraintHorizontal_weight="2" />

            <!-- Temperature -->
            <TextView
                android:id="@+id/tvTempInline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ¡ --Â°C"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="@id/tvAddress"
                app:layout_constraintEnd_toStartOf="@id/tvHumidityInline"
                android:layout_marginEnd="12dp" />

            <!-- Humidity -->
            <TextView
                android:id="@+id/tvHumidityInline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’§ --%"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="@id/tvAddress"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Source -->
        <TextView
            android:id="@+id/tvSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source: --"
            android:layout_marginTop="6dp"/>


        <!-- Sensors Row -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Temperature -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTemp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cardHum"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.5"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Temperature" />

                    <TextView
                        android:id="@+id/tvTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- Â°C"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Humidity -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintStart_toEndOf="@id/cardTemp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.5"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humidity" />

                    <TextView
                        android:id="@+id/tvHumidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- %"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- Moisture Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMoisture"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cardNpk"
                app:layout_constraintTop_toBottomOf="@id/cardTemp"
                app:layout_constraintWidth_percent="0.5"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:text="Soil Moisture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvMoisture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- %"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- NPK Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNpk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintStart_toEndOf="@id/cardMoisture"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardHum"
                app:layout_constraintWidth_percent="0.5"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:text="NPK"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvNpk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N:--  P:--  K:--"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Action Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnManual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manual Entry" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="History"
            android:layout_marginTop="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMainActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Main Activity"
            android:layout_marginTop="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btncropDecision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crop Decision"
            android:layout_marginTop="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdviceActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Advice"
            android:layout_marginTop="8dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btncropAdvisory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crop Management"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
